.navbar
  background $navbar-background-color
  height auto
  width 100%
  display block
  shadow(small)

.navbar__inner
  display flex
  flex-direction row
  justify-content space-around
  height 56px
  align-items center

.navbar__center
  flex 1 1 auto

.navbar__left
  flex 0 0 auto
  margin-left $navbar-x-margins

.navbar__right
  flex 0 0 auto
  margin-right $navbar-x-margins
